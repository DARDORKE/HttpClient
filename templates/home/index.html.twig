{% extends 'base.html.twig' %}

{% block title %}Listing - Utilisateurs{% endblock %}

{% block body %}
    {# Titre de la page #}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">{{ users|length }} utilisateurs</h1>
        </div>
    </div>

    <br/><br/>

    <div class="container-fluid">
        <table class="table" data-toggle="table">
            <thead>
            <tr>
                <th scope="col">URL Avatar</th>
                <th scope="col" data-sortable="true">Email</th>
                <th scope="col" data-sortable="true">Pr√©nom</th>
                <th scope="col" data-sortable="true">Nom</th>
            </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <th scope="row">
                        {{ user.avatar }}
                    </th>
                    <td>
                        {{ user.email }}
                    </td>
                    <td>
                        {{ user.first_name }}
                    </td>
                    <td>
                        {{ user.last_name }}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}