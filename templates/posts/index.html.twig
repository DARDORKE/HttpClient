
{% extends 'base.html.twig' %}

{% block title %} Listing â€“ Post {% endblock %}

{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header"> {{ posts|length }} posts </h1>
        </div>
    </div>

    <br/><br/>

    <div class="container-fluid">
        <table class="table" data-toggle="table">
            <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col" data-sortable="true">Titre</th>
                <th scope="col" data-sortable="true">Texte</th>
                <th scope="col" data-sortable="true">ID Utilisateur</th>
            </tr>
            </thead>
            <tbody>
            {% for post in posts %}
                <tr>
                    <th scope="row">
                        {{ post.id }}
                    </th>
                    <td>
                        {{ post.title }}
                    </td>
                    <td>
                        {{ post.body }}
                    </td>
                    <td>
                        {{ post.userId }}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}