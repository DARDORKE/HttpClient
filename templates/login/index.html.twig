{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}
    <div class="container login-container">
        <h2>Connexion sécurisée</h2>
        <hr />

        <form method="post" action="{{ path('login_check') }}">
            <div class="form-group margin-top-20">
                <label for="email">Nom d'utilisateur</label>
                <input type="text" name="email" id="email" class="form-control" required autofocus>
            </div>

            <div class="form-group margin-top-20">
                <label for="password">Mot de passe</label>
                <input type="password" name="password" id="password" class="form-control" required>
            </div>

            <div class="form-group margin-top-20 text-align-center">
                <button class="btn btn-lg" style="background-color: #ddd; color: #413C49" type="submit">
                    Se connecter
                </button>
            </div>

        </form>
    </div>

{% endblock %}

{% block stylesheets %}
    <style>
        .login-container{
            width: 50%;
            border: 1px solid #ddd;
            border-radius: 10px;
            background-color: #F9F9FA;
            color: #413C49;
            margin-top: 90px;
            padding: 20px 40px 20px 40px;
        }
        .margin-top-20{
            margin-top: 20px
        }
        .text-align-center{
            text-align: center;
        }
    </style>
{% endblock %}